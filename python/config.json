{
    "app": {
        "loopSleepTime": 0.2,
        "scriptsPath": "/home/pi/scripts"
    },
    "io": {
        "gpioPinNumberingMode": "BCM",
        "inputs": [
            {
                "key": "mister_switch",
                "name": "Mister switch",
                "topic": "/monitor/control/in/{key}/{topicHostName}",
                "pin": 18,
                "pud": "PUD_UP",
                "interval": 3
            },
            {
                "key": "light_switch",
                "name": "Light switch",
                "topic": "/monitor/control/in/{key}/{topicHostName}",
                "pin": 24,
                "pud": "PUD_UP",
                "interval": 3
            }
        ],
        "outputs": [
            {
                "key": "sr1_data",
                "name": "Shift register 1 data pin",
                "deviceType": "GPIO",
                "pin": 27
            },
            {
                "key": "sr1_clock",
                "name": "Shift register 1 clock pin",
                "deviceType": "GPIO",
                "pin": 4
            },
            {
                "key": "sr1_latch",
                "name": "Shift register 1 latch pin",
                "deviceType": "GPIO",
                "pin": 22
            },
            {
                "key": "sr1_oe",
                "name": "Shift register 1 output enable pin",
                "deviceType": "GPIO",
                "pin": 17
            },
            {
                "key": "sr1_out1",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 1
            },
            {
                "key": "sr1_out2",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 2
            },
            {
                "key": "sr1_out3",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 3
            },
            {
                "key": "sr1_out4",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 4
            },
            {
                "key": "sr1_out5",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 5
            },
            {
                "key": "sr1_out6",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 6
            },
            {
                "key": "sr1_out7",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 7
            },
            {
                "key": "sr1_out8",
                "name": "BBQ Area Lawn",
                "deviceType": "SR",
                "shiftRegisterKey": "sr1",
                "topic": "monitor/control/out/{action}/{key}/{topicHostName}",
                "pin": 8
            }
        ],
        "shiftRegisters": [
            {
                "key": "sr1",
                "name": "Irrigation controller",
                "devices": 1,
                "outputsPerDevice": 8,
                "data": "sr1_data",
                "clock": "sr1_clock",
                "latch": "sr1_latch",
                "oe": "sr1_oe",
                "clear": null
            }
        ],
        "virtuals": [
            {
                "key": "lightOnTime",
                "name": "Light on time (mins)",
                "description": "The amount of time to turn on the light when the button is pressed",
                "type": "float",
                "value": 30,
                "units": "mins",
                "interval": 30,
                "topic": "monitor/control/virtual/{action}/{key}/{topicHostName}"
            }
        ],
        "monitors": [
            {
                "name": "usage",
                "cmd": "[internal]",
                "params": "diskusage /",
                "topic": "monitor/host/disk/{topicHostName}",
                "interval": 5
            },
            {
                "name": "inside",
                "cmd": "[internal]",
                "params": "onewire /sys/bus/w1/devices/28-0119390a4b53/w1_slave",
                "topic": "monitor/host/temp/{name}/{topicHostName}",
                "interval": 5
            },
            {
                "name": "water",
                "cmd": "[internal]",
                "params": "onewire /sys/bus/w1/devices/28-000005d3cced/w1_slave",
                "topic": "monitor/host/temp/{name}/{topicHostName}",
                "interval": 5
            },
            {
                "name": "arm",
                "cmd": "vcgencmd",
                "params": "measure_clock {name}",
                "topic": "monitor/host/clock/{name}/{topicHostName}",
                "regex": "=(\\d+)",
                "interval": 5
            },
            {
                "name": "cpu",
                "cmd": "vcgencmd",
                "params": "measure_temp",
                "topic": "monitor/host/temp/{name}/{topicHostName}",
                "regex": "(\\d+\\.{0,1}\\d*)",
                "interval": 5
            },
            {
                "name": "gpu",
                "cmd": "cat",
                "params": "/sys/class/thermal/thermal_zone0/temp",
                "topic": "monitor/host/temp/{name}/{topicHostName}",
                "regex": "(\\d+\\.{0,1}\\d*)",
                "interval": 5
            },
            {
                "name": "core",
                "cmd": "vcgencmd",
                "params": "measure_volts {name}",
                "topic": "monitor/host/voltage/{name}/{topicHostName}",
                "regex": "(\\d+\\.{0,1}\\d*)",
                "interval": 5
            }
        ]
    },
    "mqtt": {
