{
    "app": {
        "loopSleepTime": 1
    },
    "mqtt": {
        "broker": {
            "host": "192.168.1.38",
            "port": 1883,
            "keep_alive": 60,
            "username": "homeassistant",
            "password": "zaiviek0lae7oxuxooyee6theochaihah3iaK8tahx9Aibai3Eiwe5pa5ahch5wa"
        },
        "topicHostName": "irrigation",
        "monitors": [
            {
                "name": "usage",
                "cmd": "[internal]",
                "params": "diskusage /",
                "topic": "monitor/host/disk/{topicHostName}",
                "interval": 5
            },
            {
                "name": "arm",
                "cmd": "vcgencmd",
                "params": "measure_clock {name}",
                "topic": "monitor/host/clock/{name}/{topicHostName}",
                "regex": "=(\\d+)",
                "interval": 5
            },
            {
                "name": "cpu",
                "cmd": "vcgencmd",
                "params": "measure_temp",
                "topic": "monitor/host/temp/{name}/{topicHostName}",
                "regex": "(\\d+\\.{0,1}\\d*)",
                "interval": 5
            },
            {
                "name": "gpu",
                "cmd": "cat",
                "params": "/sys/class/thermal/thermal_zone0/temp",
                "topic": "monitor/host/temp/{name}/{topicHostName}",
                "regex": "(\\d+\\.{0,1}\\d*)",
                "interval": 5
            },
            {
                "name": "core",
                "cmd": "vcgencmd",
                "params": "measure_volts {name}",
                "topic": "monitor/host/voltage/{name}/{topicHostName}",
                "regex": "(\\d+\\.{0,1}\\d*)",
                "interval": 5
            }
        ]
    }
}